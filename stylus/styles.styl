@import 'normalize.css'
@import 'jeet'
@import 'colors.styl'
@import 'typography.styl'

//edit()

*
	//box-sizing: border-box
 
body
	body_copy_typography()
	background-color: dark_grey

a
	color: grey

.mega_wrapper
	margin: 50px
	padding-bottom: 50px
	background-color: cream
	position: relative

.clear_nav
	height: 120px
	margin: 0 auto
	border-bottom: 1px solid rgba(255, 255, 255, 0.3)
	position: absolute
	left: 0
	right: 0

.reg_nav
	height: 60px
	position: fixed
	left: 50px
	right: 50px
	top: 0
	background-color: white

.logo
	fill: white
	height: 52px
	width: 200px
	align(vertical)
	left: 26px

.nav_links
	align(vertical)
	right: 50px
	text-transform: uppercase
	font-family: 'Montserrat', sans-serif
	font-weight: 400
	font-size: 12px
	letter-spacing: .3em
	a
		color: rgba(255, 255, 255, 0.6)
		margin-left: 50px
	a:hover
		color: white

.selected
	padding-bottom: 5px
	border-bottom: 1px solid green

.home_hero
	height: 620px
	background: url('../img/home_hero.jpg') no-repeat center center
	background-size: cover
	text-align: center

.home_hero_button
	display: inline-block
	position: relative
	top: 320px
	padding: 25px 30px
	color: white
	border: 1px solid white
	text-transform: uppercase
	overflow: hidden
		.title
			title_1()
			top: 2px
		.divider1
			border-right: 1px solid white
			display: inline
			margin: 0 33px 0 20px
			padding: 10px 0
			position: relative
			top: -3px
		.date
			font-size: 20px
			letter-spacing: .3em
			position: relative
			top: 1px
		.play_triangle
			width: 0
			height: 0
			border-top: 12px solid transparent
			border-bottom: 12px solid transparent
			border-left: 18px solid white
			display:inline-block
			position: relative
			top: 5px
		.divider2
			border-right: 1px solid white
			display: inline
			margin: 0 35px 0 20px
			padding: 42px 0
			position: relative
			top: -5px

section
	margin-top:120px
	background-color: cream

.portfolio
	center(1014px, pad=3%)
	margin-bottom: -60px

.section_title
	text-align: center
	title_3()
	margin-bottom: 60px
	
.section_title::after
	content: ""
	width: 50px
	border-bottom: 1px solid grey
	display: block
	margin: 20px auto 0

.project_thumb:nth-child(odd)
	margin-right: 0

.project_thumb
	col(1/2)
	margin-bottom: 60px
	display: block
	position: relative
	text-align: center
	img
		width: 100%
	.overlay
		position: absolute
		top: 30px
		bottom: 30px
		left: 30px
		right: 30px
		background-color: white
		opacity: 0
	.text
		align(both)
		width: 100%
	.couple
		font-size: 15px
		text-transform: uppercase
		letter-spacing: .2em
	.location
		title_4()

.couple::after
	content: ""
	width: 40px
	border-bottom: 1px solid green
	display: block
	margin: 10px auto

.project_thumb:hover
	.overlay
		opacity: 1
		
.footer
	margin-top: 180px
	margin-bottom: 60px
	border-top: 1px solid grey
	border-bottom: 1px solid grey
	.row_1, .row_2
		position: relative
		center(1014px, pad=3%)
		padding-top: 30px
		padding-bottom: 30px
	.hor_divider
		border-top: 1px solid grey		

.newsletter_text
	col(5/12)
	.title
		font-family: 'Montserrat', sans-serif
		font-weight: 700
		font-size: 15px
		letter-spacing: .3em
		text-transform: uppercase
		color: grey
		margin-bottom: 10px
	.text
		font-size: 12px
		letter-spacing: .05em
		opacity: .55

.newsletter_form
	col(1/2)
	shift(1/12)
	top: 23px
	.email, .button
		height: 45px
		border: 1px solid grey
		text-transform: uppercase
	.email
		span(4/6)
		padding-left: 15px
		background: cream
		letter-spacing: .2em
	.button
		span(2/6)
		background: grey
		text-align: center
		color: white
		font-family: 'Montserrat', sans-serif
		font-weight: 400
		font-size: 12px
		letter-spacing: .3em
		text-transform: uppercase
	:focus
			background: white

.row_2
	#mini_logo
		display: inline
		position: relative
		width: 26px
		top: 3px
		fill: grey
	.divider_1
		border-right: 1px solid grey
		display: inline
		margin: 0 30px 0 30px
		padding: 10px 0
		position: relative
		top: -10px
	.copyright
		position: relative
		text-transform: uppercase
		font-size: 9px
		top: -10px
	#facebook, #pinterest, #twitter
		width: 40px
		float: right
		position: relative
		top: 2px



