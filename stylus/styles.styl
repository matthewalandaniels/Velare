@import 'normalize.css'
@import 'jeet'
@import 'colors.styl'
@import 'typography.styl'

//edit()

*
	box-sizing: border-box
 
body
	body_copy_typography()
	background-color: dark_grey

.clear_nav
	height: 120px
	margin: 0 auto
	border-bottom: 1px solid rgba(255, 255, 255, 0.3)
	position: absolute
	left: 0
	right: 0

.reg_nav
	height: 60px
	position: fixed
	left: 50px
	right: 50px
	top: 0
	background-color: white

.logo
	height: h = 52px
	fill: white
	position: relative
	top: 50%
	margin-top: -(h / 2)
	margin-left: 26px

.mega_wrapper
	margin: 50px
	background-color: cream
	position: relative

.home_hero
	height: 620px
	background: url('../img/home_hero.jpg') no-repeat center center
	background-size: cover
	text-align: center

.home_hero_button
	display: inline-block
	position: relative
	top: 350px
	padding: 25px 30px
	color: white
	border: 1px solid white
	text-transform: uppercase
	overflow: hidden
		.title
			title_1()
			top: 2px
		.divider1
			border-right: 1px solid white
			display: inline
			margin: 0 33px 0 20px
			padding: 10px 0
			position: relative
			top: -3px
		.date
			font-size: 20px
			letter-spacing: .3em
			position: relative
			top: 1px
		.play_triangle
			width: 0
			height: 0
			border-top: 12px solid transparent
			border-bottom: 12px solid transparent
			border-left: 18px solid white
			display:inline-block
			position: relative
			top: 5px
		.divider2
			border-right: 1px solid white
			display: inline
			margin: 0 35px 0 20px
			padding: 42px 0
			position: relative
			top: -5px

section
	margin-top:120px
	background-color: cream

.portfolio
	text-align: center

.section_title
	title_3()
	margin-bottom: 60px
	
.section_title::after
	content: ""
	width: 50px
	border-bottom: 1px solid grey
	display: block
	margin: 20px auto 0

